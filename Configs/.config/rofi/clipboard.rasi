/*****----- Global Properties -----*****/
@import "./colors.rasi"
* {
    background-color:       transparent;
    text-color:             @foreground;
}

/*****----- Configuration -----*****/
configuration {
    modi:                   "dmenu";
    show-icons:             false;
    dmenu {
        display-name:       "ó°¨¸ ";
    }
}

/*****----- Main Window -----*****/
window {
    transparency:           "real";
    location:               south;
    width:                  600px;
    x-offset:               0px;
    y-offset:               -50px;
    border-radius:          24px;
    border:                 2px solid;
    background-color:       @background;
    border-color:           @selected;
}

/*****----- Main Box -----*****/
mainbox {
    spacing:                20px;
    margin:                 0px;
    padding:                20px;
    border:                 0px solid;
    border-radius:          0px 0px 0px 0px;
    border-color:           @selected;
    background-color:       transparent;
    children:               [ "inputbar", "listview" ];
}

/*****----- Inputbar -----*****/
inputbar {
    spacing:                8px;
    margin:                 0px;
    padding:                8px 16px;
    border:                 0px 0px 2px 0px;
    border-radius:          100%;
    border-color:           @selected;
    background-color:       @background-alt;
    text-color:             @foreground;
    children:               [ "prompt", "entry" ];
}

prompt {
    background-color:       inherit;
    text-color:             inherit;
}
textbox-prompt-colon {
    expand:                 false;
    str:                    "::";
    background-color:       inherit;
    text-color:             inherit;
}
entry {
    background-color:       inherit;
    text-color:             inherit;
    cursor:                 text;
    placeholder:            "Search";
    placeholder-color:      inherit;
}

/*****----- Listview -----*****/
listview {
    background-color:       transparent;
    lines:                  8;
    columns:                1;
    fixed-height:           true;
    cycle:                  false;
}

/*****----- Elements -----*****/
element {
    spacing:                10px;
    padding:                8px 16px;
    border-radius:          16px;
    cursor:                 pointer;
}
element normal active {
    text-color:             @selected;
}
element alternate active {
    text-color:             @active;
}
element selected normal, element selected active {
    background-color:       @background-alt;
}
element-text {
    text-color:             inherit;
    cursor:                 inherit;
}
element selected {
    text-color:             @foreground;
}

/*****----- Message -----*****/
error-message {
    padding:                20px;
    border:                 0px solid;
    border-radius:          0px;
    border-color:           @selected;
    background-color:       black / 10%;
    text-color:             @foreground;
}
textbox {
    background-color:       transparent;
    text-color:             @foreground;
    vertical-align:         0.5;
    horizontal-align:       0.0;
}
